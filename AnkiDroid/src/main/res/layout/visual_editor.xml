<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar"
        android:id="@id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!-- TODO: Add hover text for buttons -->
    <!-- Set up the main editor -->
    <!-- 24dp + 8dp padding to ensure that the scrollbar is fully visible -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="32dp"
        android:id="@+id/visual_editor_wrapper">

        <com.ichi2.anki.multimediacard.visualeditor.SummerNoteVisualEditor
            android:id="@+id/editor_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <HorizontalScrollView
        android:id="@+id/toolbar_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_grey_500"
        android:layout_alignParentBottom="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal">

    <!-- Set up the toolbar -->
        <com.ichi2.anki.multimediacard.visualeditor.VisualEditorToolbar
            android:id="@+id/editor_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_bold"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_bold_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_italic"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_italic_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_underline"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_underlined_black_24dp"
                />

            <!-- we make this gone initially as it's optional -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_cloze"
                android:visibility="gone"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_cloze_black_24dp"
                />
            <!-- Format Clear -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_clear_formatting"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_clear_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_text_color"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_color_text_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_background_color"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_color_background_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_horizontal_rule"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_horizontal_rule_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_align_left"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_align_left_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_align_center"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_align_center_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_align_right"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_align_right_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_align_justify"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_format_align_justify_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_insert_mathjax"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_add_equation_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_add_image"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_image_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_record_audio"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_mic_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_white_board"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_mode_edit_white" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_view_html"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_code_black_24dp"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editor_button_customs"
                style="@style/visual_editor_toolbar_button"
                app:srcCompat="@drawable/ic_add_toolbar_icon" />

        </com.ichi2.anki.multimediacard.visualeditor.VisualEditorToolbar>
        </HorizontalScrollView>
    </RelativeLayout>
